
#ifndef _MUSIC_H
#define _MUSIC_H


// Note lengths
#define BPM 120
#define QUARTER 60000/BPM
#define HALF 2*QU
#define WHOLE 4*QU
#define EIGHTH QU/2
#define SIXTH 2*QU/3
#define FIFTH 4*QU/5

// Represents a note/tone
typedef struct {
    int freq;
    int len;
} NOTE;

// Pointer to a song to play on the speaker
extern NOTE* cur_song;

// Note frequencies

#define NOTE_AS3 233
#define NOTE_D4  294
#define NOTE_DS4 311
#define NOTE_F4  349

// Represents the end of a song
#define NOTE_END {0, 0}

#endif
