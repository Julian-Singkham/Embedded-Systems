
#ifndef _MUSIC_H
#define _MUSIC_H


// Note lengths
#define BPM 120
#define QU 60000/BPM
#define Half 2*QU
#define Eeith QU/2
#define Sixth QU/4

// Represents a note/tone
typedef struct {
    int freq;
    int len;
} NOTE;

// Pointer to a song to play on the speaker
extern NOTE* cur_song;

// Note frequencies

#define NOTE_AS3 233
#define NOTE_D4  294
#define NOTE_DS4 311

// Represents the end of a song
#define NOTE_END {0, 0}

#endif
